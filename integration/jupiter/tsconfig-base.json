{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": false,
      "declaration": true,
      "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
      "outDir": "./dist/esm",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "esModuleInterop": true
    },
    "references": [
      {
        "path": "tsconfig.json"
      }
    ]
  }
  